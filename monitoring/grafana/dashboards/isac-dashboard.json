{
  "dashboard": {
    "title": "ISAC-CRAN System Dashboard",
    "tags": ["isac", "cran", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{path}}",
            "refId": "A"
          }
        ]
      },
      {
        "title": "Response Time (P99)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P99",
            "refId": "A"
          }
        ]
      },
      {
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx Errors",
            "refId": "A"
          }
        ]
      },
      {
        "title": "Memory Usage",
        "type": "gauge",
        "gridPos": {"x": 12, "y": 8, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "container_memory_usage_bytes{namespace=\"isac-system\"}",
            "refId": "A"
          }
        ]
      },
      {
        "title": "CPU Usage",
        "type": "gauge",
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{namespace=\"isac-system\"}[5m])",
            "refId": "A"
          }
        ]
      },
      {
        "title": "Pod Count",
        "type": "stat",
        "gridPos": {"x": 0, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "count(kube_pod_info{namespace=\"isac-system\"})",
            "refId": "A"
          }
        ]
      },
      {
        "title": "Goroutines",
        "type": "stat",
        "gridPos": {"x": 6, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "go_goroutines{namespace=\"isac-system\"}",
            "refId": "A"
          }
        ]
      },
      {
        "title": "Heap Allocation",
        "type": "stat",
        "gridPos": {"x": 12, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "go_memstats_heap_alloc_bytes{namespace=\"isac-system\"}",
            "refId": "A"
          }
        ]
      },
      {
        "title": "GC Pause",
        "type": "stat",
        "gridPos": {"x": 18, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "rate(go_memstats_pause_total_ns{namespace=\"isac-system\"}[5m])",
            "refId": "A"
          }
        ]
      }
    ],
    "schemaVersion": 27,
    "version": 1,
    "refresh": "10s"
  }
}
